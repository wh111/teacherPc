.login-detail-root {
    cursor: pointer;
    min-height: 700px;
    background: url("../../assets/images/login-bg.jpg");
    input {
        ime-mode: disabled
    }
}

.login-detail {
    margin: 0 auto;
    width: 1200px;
    padding-top: 106px;
    color: #b5b5b5;
    .Tab {

        width: 390px;
        height: 450px;
        border-radius: 2px;
        background-color: #ffffff;
        box-shadow: 0 0 7px 0 rgba(172, 172, 172, 0.5);
        margin: 0 auto;
        h1 {
            width: 390px;
            height: 60px;
            border-bottom: 1px solid #e5e5e5;
            display: flex;
            margin-bottom: 48px;
            span {
                flex: 1;
                text-align: center;
                line-height: 60px;
                font-size: 16px;

            }
            .spanL {
                color: green;
            }
            .spanR {
                color: #b5b5b5;
            }
        }
    }
    .login-input {
        padding-left: 53px;
        margin-top: -10px;
        .div {
            width: 260px;
            height: 40px;
            .icon-login {
                float: left;
                width: 53px;
                height: 40px;
                border: solid 1px #cccccc;
                border-right: none;
                img {
                    margin-left: 14px;
                    margin-top: 4px;
                }
            }
            input {
                width: 206px;
                height: 40px;
                border: solid 1px #cccccc;
                border-left: none;
                padding: 0 4px;
                font-size: 14px;
            }
        }
        button {
            width: 260px;
            height: 42px;
            border-radius: 2px;
            background-color: #fd7416;
            margin-top: 25px;
            border: none;
            font-size: 16px;
            font-weight: bold;
            color: #ffffff;
        }
    }
    .login-footer-foot {
        height: 50px;
        padding-left: 13px;
        margin-top: 45px;
        line-height: 50px;
        .img {
            float: left;
            width: 18px;
            height: 18.4px;
            margin-top: 3px;
        }
        span {
            float: left;
            color: #b5b5b5;
            margin-left: 4px;
        }
    }
    .wechat {
        float: right;
        margin-right: 130px;
        margin-top: 130px;
        font-size: 16px;
        width: 160px;
        color: #434343;
        .wechat-img {
            margin-left: 15px;
        }
    }
}

.tabRegister {
    color: #b5b5b5;
    .Tab {
        width: 390px;
        height: 450px;
    }
    .tabRegister-footer {
        display: flex;
        width: 260px;
        margin-top: 55px;
        span {
            flex: 1;
            text-align: center;
        }
    }
}

